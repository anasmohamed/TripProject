<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/fragment_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.one.direction.nabehha.ui.addtrip.AddNoteFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/addNoteLayout"
            android:layout_marginTop="15dp"
            android:weightSum="4">

            <EditText
                android:id="@+id/textView_add_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="0dp"
                android:layout_weight="3"
                android:layout_toLeftOf="@+id/image_add_note"
                android:hint="Add note" />

            <ImageView
                android:id="@+id/image_add_note"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/edit" />

        </LinearLayout>

        <ListView
            android:id="@+id/list_view_notes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_below="@+id/addNoteLayout"
            android:background="@color/colorAccent" />

        <Button
            android:id="@+id/doneBtnAddNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_view_notes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Done" />


    </RelativeLayout>

</layout>
